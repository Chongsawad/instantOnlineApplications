%h2
  Sign in
%fieldset
  - form_for resource_name, resource, :url => session_path(resource_name) do |f|
    = f.label :email
    %br
    = f.text_field :email
    %br
    = f.label :password
    %br
    = f.password_field :password
    %br
    %br
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me 
    %br
    = f.submit "Sign in"
  %br
  = render :partial => "shared/devise_links"