.grid_4
  %h3
    Edit
    = resource_name.to_s.humanize

  - semantic_form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |form|

    = form.error_messages

    - form.inputs do

      = form.input :username, :as => :radio, :include_blank => false, :disabled => true, :collection => current_user.username, :hint => "The Username is prohibitted/reserved "

      = form.input :email

      = form.input :password, :as => :password, :hint => "leave blank if you don't want to change it"

      = form.input :password_confirmation, :as => :password

      = form.input :current_password, :as => :password, :hint => "we need your current password to confirm your changes"

    = form.buttons


