%table#report.box
  %thead
    %tr
      %th
        %h3
          Status
      %th
        %h3
          Information
  %tbody
    %tr
      %td#report-status
        -if @site.status == "Online"
          = image_tag("deploy_ok.png")

        -else
          = image_tag("waiting.png")

        %h6 
          Status : 
          -if @site.status == nil
            %span
              Undefined!
          -else
            %span.tick
              =h @site.status.to_s().capitalize
              
      %td#report-list{:width => "75%"}
        = render :partial => "report_table"

.clearfix

#toolbar.box

  %h3
    TOOLS

  = render :partial => "tools"