%html
  %head
    %title Instant Online Applications
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'text'
    = stylesheet_link_tag '960'
    
    = stylesheet_link_tag 'galleriffic-1'
    = stylesheet_link_tag 'jquery-ui-1.8.2.custom'
    = stylesheet_link_tag 'application'
    
    = formtastic_stylesheet_link_tag
    = javascript_include_tag "jquery-1.4.2.min"
    = javascript_include_tag "jquery-ui-1.8.2.custom.min"
    = javascript_include_tag "application"

  %body
    .wrapper
      .header
        .container_12
          .grid_12#top
            = render :partial => "shared/login"
            #nav
              = render :partial => "shared/nav"

          .clearfix

          .grid_12
            %h1
              = yield(:header) ||"Instant Online Application"


      .content
        .container_12
          .grid_12
            -if flash[:notice]
              .success
                = flash[:notice]
            -if flash[:alert]
              .notice
                = flash[:alert]  
            -if flash[:warning] 
              .error
                = flash[:warning] 
                
          .subpage
            = yield
 
    .clearfix

  .footer
    = render :partial => "shared/footer"

