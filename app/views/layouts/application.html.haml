%html
  %head
    %title Instant Online Applications
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'text'
    = stylesheet_link_tag '960'
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'jquery-ui-1.8.2.custom'
    = formtastic_stylesheet_link_tag
    = javascript_include_tag "jquery-1.4.2.min"
    = javascript_include_tag "jquery-ui-1.8.2.custom.min"
    = javascript_include_tag "application"

  %body#application
    .wrapper
      .header
        .container_12
          .grid_12
            = render :partial => "pages/login"
          .grid_6#logo
            =link_to "<h1>Instant Online Application</h1>", projects_path
          .grid_6#nav
            = render :partial => "pages/nav"

      .content
        .container_12
          #flash-notice
            %p.notice
              = flash[:notice]

            %p.alert
              = flash[:alert]
          .clearfix

          = yield
 

    .clearfix

    .footer
      = render :partial => "pages/footer"

